<!DOCTYPE html>
<html>
<head>
<title>Page Title</title>
<%- include('base/header'); -%>
</head>
<body>
    <%- include('base/navbar'); -%>
    <div class='create-form'>
        <form action='#' id='create-product-form'>
            <div class="form-group">
                <label for="vendor-name">Vendor Name</label>
                <input type="text" class="form-control" id="vendor-name" placeholder="vendor name" required>
            </div>
            <div class="form-group">
                <label for="vendor-email">Email</label>
                <input type="email" class="form-control" id="vendor-email" placeholder="example@email.com" required>
            </div>
            <div class="form-group">
                <label for="vendor-mobile">Mobile Number</label>
                <input type="number" class="form-control" id="vendor-mobile" placeholder="mobile number" required>
            </div>
            <div class="form-group">
                <label for="vendor-address">Vendor Address</label>
                <textarea class="form-control" id="vendor-address" rows="3" required></textarea>
            </div>
            <button type="submit" class="btn btn-success">Create Vendor</button>
        </form>
    </div>
</body>
<%- include('base/scripts'); -%>
<script src='/js/createVendor.js'></script>
</html>